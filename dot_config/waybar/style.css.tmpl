@define-color backgroundlight {{ .stylings.hoverOvers.background4 }};
@define-color backgrounddark {{ .stylings.hoverOvers.background2 }};
@define-color workspacesbackground1 {{ .stylings.hoverOvers.background2 }};
@define-color workspacesbackground2 {{ .stylings.hoverOvers.background3 }};
@define-color bordercolor {{ .stylings.hoverOvers.background2 }};
@define-color textcolor1 {{ .stylings.hoverOvers.text2 }};
@define-color textcolor2  {{ .stylings.hoverOvers.text2 }};
@define-color textcolor3 {{ .stylings.hoverOvers.background2 }};
@define-color iconcolor {{ .stylings.hoverOvers.background5 }};

/* -----------------------------------------------------
 * General 
 * ----------------------------------------------------- */

* {
  font-family: {{ .stylings.fonts.UI.family }}, "Font Awesome 6 Free", FontAwesome, Ubuntu, Arial,
    sans-serif;
  border: none;
  border-radius: 0px;
}

window#waybar {
  background-color: {{ .stylings.hoverOvers.background1 }};
  border-bottom: 3px groove {{ .stylings.hoverOvers.border1 }};
  /* color: #FFFFFF; */
  transition-property: background-color;
  transition-duration: 0.5s;
}

/* -----------------------------------------------------
 * Workspaces 
 * ----------------------------------------------------- */

#workspaces {
  margin: 5px 1px 6px 1px;
  padding: 0px 1px;
  border-radius: {{ .stylings.hoverOvers.bradius1 }};
  border: 0px;
  font-weight: bold;
  font-style: normal;
  font-size: 16px;
  color: @textcolor1;
}

#workspaces button {
  padding: 0px 5px;
  margin: 4px 3px;
  border-radius: {{ .stylings.hoverOvers.bradius1 }};
  border: 0px;
  color: @textcolor3;
  transition: all 0.3s ease-in-out;
}

#workspaces button.active, #workspaces button.focused {
  color: @textcolor1;
  background: @workspacesbackground2;
  border-radius: {{ .stylings.hoverOvers.bradius1 }};
  min-width: 40px;
  transition: all 1.0s ease-in-out;
  border: 2px {{ .stylings.hoverOvers.border2 }} solid;
}

#workspaces button:hover {
  color: @textcolor1;
  background: @workspacesbackground2;
  border-radius: 6px;
}

/* -----------------------------------------------------
 * Tooltips
 * ----------------------------------------------------- */

tooltip {
  border-radius: 10px;
  background-color: @backgroundlight;
  opacity: 0.8;
  padding: 20px;
  margin: 0px;
}

tooltip label {
  color: @textcolor2;
}

/* -----------------------------------------------------
 * Window
 * ----------------------------------------------------- */

#window {
  background: @backgroundlight;
  margin: 10px 15px 10px 0px;
  padding: 2px 10px 0px 10px;
  border-radius: 12px;
  color: @textcolor2;
  font-size: 16px;
  font-weight: normal;
}

window#waybar.empty #window {
  background-color: transparent;
}

/* -----------------------------------------------------
 * Taskbar
 * ----------------------------------------------------- */

#taskbar {
  background: @backgroundlight;
  margin: 6px 15px 6px 0px;
  padding: 0px;
  border-radius: {{ .stylings.hoverOvers.bradius1 }};
  font-weight: normal;
  font-style: normal;
  border: 3px dotted @backgroundlight;
}

#taskbar button {
  margin: 0;
  border-radius: {{ .stylings.hoverOvers.bradius1 }};
  padding: 0px 5px 0px 5px;
}

/* -----------------------------------------------------
 * Modules
 * ----------------------------------------------------- */

.modules-left > widget:first-child > #workspaces {
  margin-left: 0;
}

.modules-right > widget:last-child > #workspaces {
  margin-right: 0;
}

/* -----------------------------------------------------
 * Custom Quicklinks
 * ----------------------------------------------------- */

#custom-browser,
#custom-filemanager,
#network,
#pulseaudio,
#battery,
#custom-appmenu,
#clock {
  margin-right: 20px;
  font-size: 20px;
  font-weight: bold;
  color: @iconcolor;
  padding: 4px 10px 2px 10px;
  font-size: 16px;
}

#custom-quicklink1,
#custom-quicklink2,
#custom-quicklink3,
#custom-quicklink4,
#custom-quicklink5,
#custom-quicklink6,
#custom-quicklink7,
#custom-quicklink8,
#custom-quicklink9,
#custom-quicklink10 {
  padding: 0px;
  margin-right: 7px;
  font-size: 20px;
  color: @iconcolor;
}

#custom-osktoggle {
  border-radius: {{ .stylings.hoverOvers.bradius1 }};
  font-size: 20px;
  padding: 4px;
  background-color: @backgroundlight;
  color: @textcolor1;
  margin: 10px 20px 10px 10px;
  border-radius: {{ .stylings.hoverOvers.bradius1 }};
  border: 0px;
  font-weight: bold;
  font-style: normal;
}

/* -----------------------------------------------------
 * Custom Modules
 * ----------------------------------------------------- */

#custom-appmenu {
  background-color: @backgroundlight;
  color: @textcolor1;
  border-radius: {{ .stylings.hoverOvers.bradius1 }};
  margin: 10px 10px 10px 10px;
}

/* -----------------------------------------------------
 * Custom Exit
 * ----------------------------------------------------- */

#custom-exit {
  margin: 10px 20px 10px 10px;
  padding: 4px;
  font-size: 20px;
  color: @iconcolor;
  border-radius: {{ .stylings.hoverOvers.bradius1 }};
  background-color: @backgroundlight;
}

/* -----------------------------------------------------
 * Hardware Group
 * ----------------------------------------------------- */

#disk,
#memory,
#cpu,
#language {
  margin: 10px;
  padding: 0px;
  font-size: 14px;
  color: {{ .stylings.hoverOvers.text2 }};
  border-radius: {{ .stylings.hoverOvers.bradius1 }};
  background-color: @backgroundlight;
}
/* glue cpu and memory together */
#cpu {
  margin-right: 0px;
  border-radius: {{ .stylings.hoverOvers.bradius1 }} 0px 0px {{ .stylings.hoverOvers.bradius1 }};
  padding: 0px 10px 0px 10px;
}
#memory {
  margin-left: 0px;
  border-radius: 0px {{ .stylings.hoverOvers.bradius1 }} {{ .stylings.hoverOvers.bradius1 }} 0px;
  padding: 0px 10px 0px 10px;
}

#keyboard-state {
  background-color: @backgroundlight;
  font-size: 12px;
  color: @textcolor2;
  border-radius: {{ .stylings.hoverOvers.bradius1 }};
  margin: 10px 10px 10px 0px;
}

#language {
  margin-right: 10px;
}

/* -----------------------------------------------------
 * Clock
 * ----------------------------------------------------- */

#clock {
  background-color: @backgroundlight;
  font-size: 16px;
  color: @textcolor1;
  border-radius: {{ .stylings.hoverOvers.bradius1 }};
  margin: 10px 7px 10px 0px;
}

/* -----------------------------------------------------
 * Pulseaudio
 * ----------------------------------------------------- */

#pulseaudio {
  font-size: 16px;
  border-radius: {{ .stylings.hoverOvers.bradius1 }};
  margin: 10px 10px 10px 0px;
background-color: {{ .stylings.hoverOvers.background4 }};
  color: {{ .stylings.hoverOvers.text2 }};

}

#pulseaudio.muted {
  color: white;
  background-color: black;
  }

/* -----------------------------------------------------
 * Network
 * ----------------------------------------------------- */

#network {
  background-color: @backgroundlight;
  font-size: 16px;
  color: @textcolor2;
  border-radius: {{ .stylings.hoverOvers.bradius1 }};
  margin: 10px 10px 10px 0px;
}

#network.ethernet {
  background-color: @backgroundlight;
  color: @textcolor2;
}

#network.wifi {
  background-color: @backgroundlight;
  color: @textcolor2;
}

/* -----------------------------------------------------
 * Bluetooth
 * ----------------------------------------------------- */

#bluetooth,
#bluetooth.on,
#bluetooth.connected {
  background-color: @backgroundlight;
  font-size: 16px;
  color: @textcolor2;
  border-radius: {{ .stylings.hoverOvers.bradius1 }};
  margin: 10px 15px 10px 0px;
}

#bluetooth.off {
  background-color: transparent;
  padding: 0px;
  margin: 0px;
}

/* -----------------------------------------------------
 * Battery
 * ----------------------------------------------------- */

#battery {
  background-color: @backgroundlight;
  font-size: 16px;
  color: @textcolor2;
  border: 2px {{ .stylings.hoverOvers.border2 }} dotted;
  border-radius: {{ .stylings.hoverOvers.bradius1 }};
  margin: 10px 15px 10px 0px;
}

#battery.charging,
#battery.plugged {
  color: @textcolor2;
  background-color: @backgroundlight;
}

@keyframes blink {
  to {
    background-color: @backgroundlight;
    color: @textcolor2;
  }
}

#battery.warning:not(.charging) {
  background-color: #f1c40f;
  color: @textcolor3;
}

#battery.full {
  color: @textcolor3;
  background-color: #2ecc71;
}

#battery.good:not(.charging) {
  background-color: #3498db;
  color: @textcolor3;
}

#battery.critical:not(.charging) {
  background-color: #f53c3c;
  color: @textcolor3;
  animation-name: blink;
  animation-duration: 0.5s;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  animation-direction: alternate;
}

/* -----------------------------------------------------
 * Tray
 * ----------------------------------------------------- */

#tray {
  border-radius: {{ .stylings.hoverOvers.bradius1 }};
  border: 2px {{ .stylings.hoverOvers.border2 }} dotted;
  padding: 4px;
  margin: 10px 15px 10px 0px;
}

#tray > .passive {
  -gtk-icon-effect: dim;
}

#tray > .needs-attention {
  -gtk-icon-effect: highlight;
  background-color: #eb4d4b;
}

/* -----------------------------------------------------
 * Other
 * ----------------------------------------------------- */

label:focus {
  background-color: #000000;
}

#backlight {
  background-color: #90b1b1;
}

#network {
  background-color: #2980b9;
}

#network.disconnected {
  background-color: #f53c3c;
}
