{
  "outline_panel": {
    "dock": "right"
  },
  "notification_panel": {
    "dock": "left"
  },
  "project_panel": {
    "dock": "right"
  },
  ui_font_family: "{{ .stylings.fonts.UI.family }}",
  "ui_font_size": {{ .stylings.fonts.UI.size }},
  "buffer_font_size": {{ .stylings.fonts.Mono.size }},
  "buffer_font_family": "{{ .stylings.fonts.Mono.family }}",
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light",
    "dark": "Ros√© Pine"
  },
  {{ if eq .chezmoi.os "windows" }}
  "terminal": {
    "shell": {
      "with_arguments": {
        "program": "pwsh",
        "args": []
      }
    }
  }
  {{ end }}
}
